            <TableColumn fx:id="customerDivisionColumn" prefWidth="117.0" text="Division Number" />
        </columns>
      </TableView>
      <ButtonBar layoutX="162.0" layoutY="328.0" prefHeight="40.0" prefWidth="555.0">
        <buttons>
            <Button mnemonicParsing="false" onAction="#onAddCustomer" text="Add Customer" />
            <Button mnemonicParsing="false" onAction="#onEditCustomer" text="Edit Customer" />
